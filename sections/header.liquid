<div
  style="--bg-color-header: {{ section.settings.bg_color }}; --header-pt: {{ section.settings.padding_top }}px; --header-pb: {{ section.settings.padding_bottom }}px; --header-pl: {{ section.settings.padding_left }}px; --header-pr: {{ section.settings.padding_right }}px"
  class="header"
>
  <div class="logo-div">
    <img
      src="{{ section.settings.logo | image_url: width: 1000 }}"
      width="{{ section.settings.logo_width }}px"
      height="auto"
    >
  </div>
  <div class="menu-div">
    <nav class="main-menu">
      {% if section.settings.menu != blank %}
        {% for link in linklists[section.settings.menu].links %}
          <a
            class="menu-links"
            style="--menu-font-size: {{ section.settings.menu_font_size }}px; --menu-link-color: {{ section.settings.menu_link_color }}; --link-font-weight: {{ section.settings.link_font_weight }}; --links-gap: {{ section.settings.link_gap }}; --links-transform: {{ section.settings.links_transform }}; --links-hover-effect: {{ section.settings.links_hover_transform }}; --link-hover-color: {{ section.settings.link_hover_color }}; --links-hover-scale: {{ section.settings.link_hover_scale }}"
            href="{{ link.url }}"
          >
            {{ link.title }}
          </a>
        {% endfor %}
      {% endif %}
    </nav>
  </div>
  <div class="header-icons">
    <svg
      class="w-6 h-6 text-gray-800 dark:text-white"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      fill="none"
      viewBox="0 0 24 24"
    >
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 10V6a3 3 0 0 1 3-3v0a3 3 0 0 1 3 3v4m3-2 .917 11.923A1 1 0 0 1 17.92 21H6.08a1 1 0 0 1-.997-1.077L6 8h12Z"/>
    </svg>
    <svg
      class="w-6 h-6 text-gray-800 dark:text-white"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      fill="none"
      viewBox="0 0 24 24"
    >
      <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="m21 21-3.5-3.5M17 10a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"/>
    </svg>
  </div>
</div>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Header Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "default": 20,
      "min": 20,
      "max": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "default": 20,
      "min": 20,
      "max": 100
    },
    {
      "type": "range",
      "id": "padding_left",
      "label": "Padding Left",
      "default": 20,
      "min": 20,
      "max": 100
    },
    {
      "type": "range",
      "id": "padding_right",
      "label": "Padding Right",
      "default": 20,
      "min": 20,
      "max": 100
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo Width",
      "default": 100,
      "min": 100,
      "max": 250,
      "step": 5
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Select Menu"
    },
    {
      "type": "range",
      "id": "menu_font_size",
      "label": "Menu Font Size",
      "default": 16,
      "min": 16,
      "max": 50
    },
    {
      "type": "color",
      "id": "menu_link_color",
      "label": "Menu Link Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "link_font_weight",
      "label": "Link Font Weight",
      "options": [
        {
          "value": "400",
          "label": "Regular"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi Bold"
        },
        {
          "value": "700",
          "label": "Bold"
        },
        {
          "value": "800",
          "label": "Extra Bold"
        },
        {
          "value": "900",
          "label": "Black"
        }
      ]
    },
    {
      "type": "select",
      "id": "links_transform",
      "label": "Links Transform",
      "options": [
        {
          "value": "Uppercase",
          "label": "Uppercase"
        },
        {
          "value": "Capitalize",
          "label": "Capitalize"
        },
        {
          "value": "lowercase",
          "label": "Lowercase"
        }
      ]
    },
    {
      "type": "select",
      "id": "links_hover_transform",
      "label": "Hover Effect",
      "options": [
        {
          "value": "underline",
          "label": "Underline"
        },
        {
          "value": "underline dotted",
          "label": "Underline Dotted"
        },
        {
          "value": "wavy underline",
          "label": "Wavy Underline"
        },
        {
          "value": "underline overline",
          "label": "Underline Overline"
        }
      ]
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Hover Color Menu"
    },
    {
      "type": "select",
      "id": "link_hover_scale",
      "label": "Scale (Hover)",
      "options": [
        {
          "value": "disable",
          "label": "Disable"
        },
        {
          "value": "110%",
          "label": "110%"
        },
        {
          "value": "120%",
          "label": "120%"
        }
      ]
    },
    {
      "type": "range",
      "id": "link_gap",
      "label": "Link Gap",
      "default": 30,
      "min": 5,
      "max": 100
    }
  ]
}
{% endschema %}
